@{
    var _LayoutContent = Html.GetSite().ContentLayout;
    var _Menu = Html.GetMenu();
}
<!DOCTYPE html>
<html lang="@Html.Lang()" ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Html.MetatagDescription()
    <title>@Html.TitlePageText()</title>
    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-controller="appController">
    <header class="container header">
        <div class="row">
            @*LOGO*@
            <div class="col-md-3">
                <a href="/@Html.LinkHome()">
                    <img src="@Html.FindValue(_LayoutContent, "logo")" class="img-responsive" alt="logo">
                </a>
            </div>
            @*SEARCH*@
            <div class="col-md-6 mtop">
                <input type="text" class="form-control form-search" placeholder="@Html.FindValue(_LayoutContent, "search-text")" />
            </div>
            @*CART*@
            <div class="col-md-3 mtop">
                <div class="btn-group btn-group-cart">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <span class="pull-left">
                            <i class="fa fa-shopping-cart icon-cart"></i>
                        </span>
                        <span class="pull-left">Shopping Cart: {{cart.length}} item(s)</span>
                        <span class="pull-right">
                            <i class="fa fa-caret-down"></i>
                        </span>
                    </button>
                    <ul class="dropdown-menu cart-content" role="menu">
                        <li ng-repeat="item in cart">
                            <a href="detail.html">
                                <b>{{item.ProductName}}</b>
                                <span>x{{item.Number}} {{moneySymbol}} {{item.Price}}</span>
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="cart.html">Total: {{moneySymbol}} {{totalCart()}}</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    @*NAVIGATION BAR*@
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand visible-xs" href="#">
                    @Html.FindValue(_LayoutContent, "project-name")
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li ng-class="{'active':active=='page-@Html.LinkHome()'}">
                        <a href="/@Html.LinkHome()">
                            @Html.FindValue(_LayoutContent, "home-text")
                        </a>
                    </li>
                    <li ng-class="{'active':active=='products'}">
                        <a href="@Url.Action("Index", "Product")">
                            @Html.FindValue(_LayoutContent, "catalogue-text")
                        </a>
                    </li>
                    <li ng-class="{'active':active=='cart'}">
                        <a href="#">
                            @Html.FindValue(_LayoutContent, "shooping-cart-text")
                        </a>
                    </li>
                    <li ng-class="{'active':active=='checkout'}">
                        <a href="#">
                            @Html.FindValue(_LayoutContent, "checkout-text")
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @foreach (var item in _Menu)
                    {
                        <li ng-class="{'active':active=='page-@item.FriendlyUrl'}">
                            <a href="@(item.RedirectUrl!=null ? item.RedirectUrl : '/' + item.FriendlyUrl)">
                                @item.Name
                            </a>
                        </li>
                    }
                </ul>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
    <div class="body container">
        @RenderBody()
    </div>
    <script>
        var _Active = '@ViewBag.Active';
        var _MoneySymbol = @Html.Raw(Json.Encode(Html.GetSite().Currencies[0]));
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularjs")
    @RenderSection("scripts", required: false)
    @Html.GAScript()
</body>
</html>
